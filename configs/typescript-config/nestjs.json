{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "lib": ["esnext"],
    "baseUrl": "./",
    "outDir": "./dist",
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node16",
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
